{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npm run start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "cron": [
      {
        "name": "hourly-tasks",
        "schedule": "0 * * * *",
        "command": "npm run cron"
      }
    ],
    "healthCheckPath": "/health"
  },
  "env": {
    "DATABASE_URL": "PLACEHOLDER_UPDATE_IN_RAILWAY_DASHBOARD",
    "PGUSER": "PLACEHOLDER_UPDATE_IN_RAILWAY_DASHBOARD",
    "PGPASSWORD": "PLACEHOLDER_UPDATE_IN_RAILWAY_DASHBOARD",
    "PGHOST": "PLACEHOLDER_UPDATE_IN_RAILWAY_DASHBOARD",
    "PGPORT": "5432",
    "PGDATABASE": "PLACEHOLDER_UPDATE_IN_RAILWAY_DASHBOARD",
    "JWT_SECRET": "PLACEHOLDER_UPDATE_IN_RAILWAY_DASHBOARD",
    "JWT_REFRESH_SECRET": "PLACEHOLDER_UPDATE_IN_RAILWAY_DASHBOARD",
    "NODE_ENV": "production",
    "PORT": "3000"
  },
  "providers": [
    {
      "name": "nodejs",
      "version": "20"
    },
    {
      "name": "typescript",
      "version": "5.2"
    },
    {
      "name": "prisma",
      "version": "5.0"
    },
    {
      "name": "npm",
      "version": "10.2"
    }
  ]
}
